#__sidebar
  .counter
    width 230px
    overflow hidden
    display flex
    justify-content space-between
    .cnt-item
      font-size .8rem
      .title
        color var(--h-color-blurrier)
        font-weight 500
      .cnt
        color var(--h-color-blur)
        font-size 1rem
        font-weight 600
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
    .total
      .cnt
        max-width 90px
    .day
      display flex
      .cnt-item
        &:first-child
          margin-right 10px
      .cnt
        max-width 55px
