.permalink
  .author
    border-top 1px dotted var(--h-color-blurriest)
    border-bottom 1px dotted var(--h-color-blurriest)
    margin-top 25px
    padding 30px 0
    clear both
    display flex
    align-items center
    .profile
      width 80px
      height 80px
      border-radius 50%
    .description
      margin-left 20px
      .user
        color var(--h-color)
        margin-bottom 5px
        font-weight 500
      .desc
        line-height 1.8em
        font-size .9rem
        color var(--h-color-blur)
        overflow hidden
        word-break break-all
