$PAGER_SIZE = 32px

#__paging
  margin 0 auto
  margin-top 85px
  display flex
  li
    font-size .9rem
    padding-left 0
    a
      color var(--h-color)
      &.no-more-prev,
      &.no-more-next
        color var(--h-color-blurrier)
      &.next,
      &.prev
        font-size 0
      span
        padding 0 4px
        min-width $PAGER_SIZE
        height $PAGER_SIZE
        line-height $PAGER_SIZE
        text-align center
        display inline-block
      .selected
        background-color var(--h-button-color-hover-background)
        color var(--h-button-color-hover)
        border-radius: 50%
        padding-left 8px
        padding-right 8px
        box-sizing border-box
  @media screen and (max-width: 1200px)
    margin-top 45px
    span
      &:not(.selected)
        display none
      &.uk-pagination-previous,
      &.uk-pagination-next
        display inline-block
