#tt-body-page
  #__main
    width var(--h-article-width)

#tt-body-index,
#tt-body-category,
#tt-body-archive,
#tt-body-tag,
#tt-body-search
  #__main
    width var(--h-index-width)

#__main
  clear both
  padding 0
  margin 0 auto
  padding-bottom 70px
  max-width 1100px
  min-width 320px
  @media screen and (max-width: 1200px)
    padding 0 15px
    padding-bottom 55px
    width 100% !important
    box-sizing border-box
